@model IEnumerable<DotNetMVC.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    /* body {
            font-family: montserrat;
            background: #e7e7e7e7;
            height: 100vh;
        }*/

    .box {
        text-align: center;
    }

    .buttonn {
        font-size: 1em;
        padding: 15px 35px;
        color: #fff;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease-out;
        background: #403e3d;
        border-radius: 50px;
    }

    .overplayy {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.8);
        transition: opacity 500ms;
        visibility: hidden;
        opacity: 0;
        z-index: 5000;
    }

        .overplayy:target {
            visibility: visible;
            opacity: 1;
        }

    .UD_overplay {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.8);
        transition: opacity 500ms;
        visibility: hidden;
        opacity: 0;
    }

        .UD_overplay:target {
            visibility: visible;
            opacity: 1;
        }


    .wrapper {
        margin: 70px auto;
        padding: 20px;
        background: #e7e7e7e7;
        border-radius: 5px;
        width: 50%;
        position: relative;
        transition: all 5s ease-in-out;
    }

        .wrapper h2 {
            margin-top: 0;
            color: #333;
        }

        .wrapper .close {
            position: absolute;
            top: 20px;
            right: 30px;
            transition: all 200ms;
            font-weight: bold;
            text-decoration: none;
            color: #333;
        }

        .wrapper .content {
            max-height: 30%;
            overflow: auto;
        }

    .UD_wrapper {
        margin: 70px auto;
        padding: 20px;
        background: #e7e7e7e7;
        border-radius: 5px;
        width: 50%;
        position: relative;
        transition: all 5s ease-in-out;
    }

        .UD_wrapper h2 {
            margin-top: 0;
            color: #333;
        }

        .UD_wrapper .close {
            position: absolute;
            top: 20px;
            right: 30px;
            transition: all 200ms;
            font-weight: bold;
            text-decoration: none;
            color: #333;
        }

        .UD_wrapper .content {
            max-height: 30%;
            overflow: auto;
        }




    .containerr {
        border-radius: 5px;
        background-color: #e7e7e7e7;
        padding: 20px 0;
    }

    form label {
        text-transform: uppercase;
        font-weight: 500;
        letter-spacing: 3px;
    }

    input[type=text], textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type="submit"] {
        background-color: #413b3b;
        color: #fff;
        padding: 15px 50px;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        font-size: 15px;
        text-transform: uppercase;
        letter-spacing: 3px;
    }

</style>

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".oranges">Oranges</li>
                        <li data-filter=".fresh-meat">Fresh Meat</li>
                        <li data-filter=".vegetables">Vegetables</li>
                        <li data-filter=".fastfood">Fastfood</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                var stt = item.ProId + "div";
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/layout_assets/img/product/@item.Img.ImgUrl">
                            <ul class="featured__item__pic__hover">
                                <li><a asp-action="Details" asp-route-id="@item.ProId"><i class="fa fa-heart"></i></a></li>
                                <li><a asp-action="Details" asp-route-id="@item.ProId"><i class="fa fa-info"></i></a></li>
                            @*  <li><a asp-controller="Carts" asp-action="AddToCart" asp-route-id="@item.ProId"><i class="fa fa-shopping-cart"></i></a></li>
                            *@
                                <li><a href="#@stt"><i class="fa fa-shopping-cart"></i></a></li>


                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@item.ProName</a></h6>
                            <h5>@item.ProPrice VNĐ</h5>
                        </div>
                    </div>
                </div>


                <div class="overplayy" id="@stt">
                    <div class="wrapper">
                        <h2 class="text-center">Thêm vào giỏ</h2>
                        <a href="#" class="close">&times;</a>
                        <div class="content">
                            <div class="containerr">
                                <form asp-controller="Carts" asp-action="AddToCart" asp-route-id="@item.ProId" method="POST">
                                    <label for="">@item.ProName</label>
                                    <input type="text" name="ProId" value="@item.ProId">
                                    <br>
                                    <img style="margin-left:50px; height: 300px; width: 300px;" src="~/layout_assets/img/product/@item.Img.ImgUrl">
                                    <br>

                                    <label>Số lượng</label>
                                    <input type="text" name="CartQuantity">

                                    <label>Giá</label>
                                    <input type="text" name="ProPrice" value="@item.ProPrice">

                                    <input type="submit" class="btn btn-outline-danger" value="Submit" style="width: 100%;">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>
